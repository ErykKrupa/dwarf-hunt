<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="wrap_content"
                                                   android:orientation="horizontal">

    <ImageView
            android:layout_width="70dp"
            android:layout_height="100dp" app:srcCompat="@drawable/bartekkrasnal" android:id="@+id/dwarfImage"
            android:layout_weight="1" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:scaleType="centerCrop"
            android:adjustViewBounds="true"
            app:layout_constraintBottom_toBottomOf="@+id/imageBackground"/>
    <ImageView
            android:layout_width="80dp"
            android:layout_height="100dp"
            android:background="@color/grayBackground"
            android:id="@+id/imageBackground" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
    <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp" app:srcCompat="@drawable/ic_check_icon_gray"
            android:id="@+id/caughtImage" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="@+id/dwarfImage" android:scaleType="fitCenter"
            android:layout_marginTop="10dp" android:layout_marginBottom="10dp"
            android:layout_marginStart="10dp" app:layout_constraintStart_toStartOf="@+id/imageBackground"
            android:layout_marginEnd="10dp"/>
    <TextView
            android:text="TextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/nameTextView" app:layout_constraintStart_toEndOf="@+id/dwarfImage"
            android:layout_marginStart="8dp" android:layout_marginTop="4dp" app:layout_constraintTop_toTopOf="parent"
            android:fontFamily="sans-serif" android:textSize="18sp"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toStartOf="@+id/imageBackground"
            android:maxLines="1" android:ellipsize="end"/>
    <TextView
            android:text="TextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/locationTextView"
            app:layout_constraintTop_toBottomOf="@+id/nameTextView" app:layout_constraintStart_toEndOf="@+id/dwarfImage"
            android:layout_marginStart="8dp" android:layout_marginTop="1dp" android:fontFamily="sans-serif"
            android:textSize="12sp" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toStartOf="@+id/imageBackground" android:maxLines="3" android:ellipsize="end"/>
    <TextView
            android:text="@string/distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/distanceLabel"
            app:layout_constraintStart_toEndOf="@+id/dwarfImage"
            android:layout_marginStart="8dp" android:fontFamily="sans-serif" android:layout_marginBottom="1dp"
            app:layout_constraintBottom_toBottomOf="parent" android:textSize="14sp"/>
    <TextView
            android:text="0"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/distanceTextView"
            app:layout_constraintStart_toEndOf="@+id/distanceLabel" android:layout_marginStart="8dp"
            android:fontFamily="sans-serif" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toStartOf="@+id/imageBackground" android:layout_marginBottom="1dp"
            app:layout_constraintBottom_toBottomOf="parent" android:textSize="14sp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
