<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   tools:context=".DwarfViewFragment">


    <ImageView
            android:adjustViewBounds="true"
            android:layout_width="0dp"
            android:src="@drawable/ankaannewroclawdwarf01"
            android:layout_height="306dp" tools:src="@drawable/ankaannewroclawdwarf01"
            android:id="@+id/imageView" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.333" android:scaleType="centerCrop"/>
    <TextView
            android:text="@string/name_eng"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/nameLabel" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintTop_toBottomOf="@+id/imageView"
            android:layout_marginTop="8dp"/>
    <TextView
            android:text="TextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/nameTextView"
            app:layout_constraintTop_toBottomOf="@+id/imageView" app:layout_constraintStart_toEndOf="@+id/nameLabel"
            android:layout_marginTop="8dp" android:layout_marginStart="4dp"
            app:layout_constraintEnd_toEndOf="@+id/barrier3" android:layout_marginEnd="8dp"/>
    <TextView
            android:text="@string/author_eng"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/authorLabel" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintTop_toBottomOf="@+id/nameLabel"
            android:layout_marginTop="8dp"/>
    <TextView
            android:text="TextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/authorTextView"
            app:layout_constraintTop_toBottomOf="@+id/nameTextView"
            app:layout_constraintStart_toEndOf="@+id/authorLabel"
            android:layout_marginTop="8dp" android:layout_marginStart="4dp"
            app:layout_constraintEnd_toEndOf="@+id/locationTextView" android:layout_marginEnd="8dp"/>
    <TextView
            android:text="TextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/addressTextView"
            app:layout_constraintStart_toEndOf="@+id/addressLabel"
            app:layout_constraintTop_toBottomOf="@+id/locationLabel" android:layout_marginTop="8dp"
            android:layout_marginStart="4dp" app:layout_constraintEnd_toStartOf="@+id/showOnTheMapButton"
            android:layout_marginEnd="8dp"/>
    <TextView
            android:text="@string/address_eng"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/addressLabel"
            app:layout_constraintTop_toBottomOf="@+id/locationLabel" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginTop="8dp"/>
    <TextView
            android:text="TextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/locationTextView"
            app:layout_constraintTop_toBottomOf="@+id/authorTextView"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toEndOf="@+id/locationLabel" android:layout_marginStart="4dp"
            app:layout_constraintEnd_toStartOf="@+id/showOnTheMapButton" android:layout_marginEnd="8dp"/>
    <TextView
            android:text="@string/location_eng"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/locationLabel" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/authorLabel"/>
    <ImageView
            android:src="@android:drawable/btn_star_big_on"
            android:layout_width="61dp"
            android:layout_height="66dp"
            android:id="@+id/caughtImage" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
    <ImageButton
            android:text="Button"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:id="@+id/showOnTheMapButton"
            android:src="@drawable/ic_place_black_24dp"
            app:layout_constraintBottom_toBottomOf="@+id/addressTextView"
            app:layout_constraintTop_toTopOf="@+id/locationTextView"
            android:adjustViewBounds="true" android:scaleType="fitCenter" android:background="#00C62828"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
    />
    <androidx.constraintlayout.widget.Barrier android:layout_width="wrap_content" android:layout_height="wrap_content"
                                              android:id="@+id/barrier3" app:barrierDirection="right"
                                              app:constraint_referenced_ids="addressTextView,locationTextView"
                                              tools:layout_editor_absoluteX="411dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>